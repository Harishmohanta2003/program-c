#include <stdio.h>

int main() {
    int a,b;
    char ch;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    printf("Enter arithmetic operator (+, -, *, /): ");
    scanf(" %c", &ch);

    switch (ch) {
        case '+':
            printf("Result is: %d + %d = %d\n", a,b,a+b);
            break;
        case '-':
            printf("Result is: %d - %d = %d\n", a,b,a-b);
            break;
        case '*':
            printf("Result is: %d * %d = %d\n",a,b,a*b);
            break;
        case '/':
                printf("Result is: %d / %d = %.2f\n", o,p, (float) o/p);
            break;
        default:
            printf("You have entered a invalide operatot\n");
            break;
    }
            
   return 0;
}
